<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="@dimen/action_bar_size"
    android:background="@color/dark_orange"
    android:gravity="center_vertical"
    tools:showIn="@layout/activity_main">

    <FrameLayout
        android:id="@+id/fr_left_one"
        android:layout_width="@dimen/top_bar_left_right_size"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/imv_left_one"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginStart="@dimen/top_bar_start_end_padding"
            android:contentDescription="@null"
            tools:src="@drawable/ic_left_arrow" />
    </FrameLayout>

    <com.matas.caroperatingsystem.widget.AppTextView
        android:id="@+id/tv_left_one"
        style="@style/TextView"
        android:layout_width="@dimen/top_bar_left_right_size"
        android:layout_height="match_parent"
        android:paddingEnd="0dp"
        android:paddingStart="@dimen/top_bar_start_end_padding"
        android:visibility="gone"
        app:layout_constraintStart_toEndOf="@id/fr_left_one" />

    <com.matas.caroperatingsystem.widget.AppTextView
        android:id="@+id/tv_title"
        style="@style/TextView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:gravity="center"
        android:textSize="@dimen/common_text_size_22sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/fr_right_one"
        app:layout_constraintStart_toEndOf="@id/tv_left_one"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="Title" />

    <FrameLayout
        android:id="@+id/fr_right_one"
        android:layout_width="@dimen/top_bar_left_right_size"
        android:layout_height="match_parent"
        app:layout_constraintEnd_toEndOf="parent">

        <ImageView
            android:id="@+id/imv_right_one"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="end"
            android:layout_marginEnd="@dimen/top_bar_start_end_padding"
            android:contentDescription="@null" />
    </FrameLayout>

</android.support.constraint.ConstraintLayout>
